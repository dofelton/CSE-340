<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
} %>

<%- messages() %>

<form class="form" id="updateForm" action="/edit-inventory" method="post">
    <fieldset>
        <legend>Edit the inventory:</legend>
        <label><%- classificationSelect %></label>
        <label>Make: <input type="text" id="invMake" name="inv_make" required pattern="[A-Za-z]+" value="<%= locals.inv_make %>"></label>
        <label>Model: <input type="text" id="invModel" name="inv_model" required pattern="[A-Za-z]+" value="<%= locals.inv_model %>"></label>
        <label>Year: <input type="number" id="invYear" name="inv_year" required pattern="[0-9]+" value="<%= locals.inv_year %>"></label>
        <label>Price: $<input type="number" id="invPrice" name="inv_price" required pattern="[0-9]+" value="<%= locals.inv_price %>"></label>
        <label>Description: <input type="text" id="invDescription" name="inv_description" required pattern="[A-Za-z]+" value="<%= locals.inv_description %>"></label>
        <label>Milage: <input type="number" id="invMilage" name="inv_milage" required pattern="[0-9]+" value="<%= locals.inv_milage %>"></label>
        <label>Color: <input type="text" id="invColor" name="inv_color" required pattern="[A-Za-z]+" value="<%= locals.inv_color %>"></label>
        <input type="submit" name="submit" value="Update Vehicle" disabled="disabled">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </fieldset>
</form>
<script src="../../js/inv-update.js"></script>